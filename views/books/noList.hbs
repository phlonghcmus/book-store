<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Book list</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Shop</a></li>
                    <li class="breadcrumb-item active">Book list</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="shop-box-inner">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                <div class="right-product-box">
                    <div class="product-item-filter row">
                        <div class="col-12 col-sm-8 text-center text-sm-left">
                            <div class="toolbar-sorter-right">
                                <span>Sort by </span>
                                <select id="basic" class="selectpicker show-tick form-control" data-placeholder="$ USD">
                                    <option data-display="Select">Nothing</option>
                                    <option value="1">Popularity</option>
                                    <option value="2">High Price → High Price</option>
                                    <option value="3">Low Price → High Price</option>
                                    <option value="4">Best Selling</option>
                                </select>
                            </div>
                            <p>Showing all {{count}} results</p>
                        </div>
                        <div class="col-12 col-sm-4 text-center text-sm-right">
                            <ul class="nav nav-tabs ml-auto">
                                <li>
                                    <a class="nav-link active" href="#grid-view" data-toggle="tab"> <i class="fa fa-th"></i> </a>
                                </li>
                                <li>
                                    <a class="nav-link" href="#list-view" data-toggle="tab"> <i class="fa fa-list-ul"></i> </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="product-categorie-box">
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                                <div class="row">
                                    <img src="https://deo.shopeemobile.com/shopee/shopee-pcmall-live-sg/assets/62d2399b89039bd1dc90ca2d50d3e802.png" class="shopee-search-empty-result-section__icon" style="width: 8.375rem;">
                                    <div>Không tìm thấy sản phẩm nào</div>
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="list-view">
                                <img src="https://deo.shopeemobile.com/shopee/shopee-pcmall-live-sg/assets/62d2399b89039bd1dc90ca2d50d3e802.png" class="shopee-search-empty-result-section__icon" style="width: 8.375rem;">
                                <div>Không tìm thấy sản phẩm nào</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left">
                <div class="product-categori">
                    <div class="search-product">
                        <form action="/books/search" method="get" id="search-form" onsubmit="return formSubmit(this)">
                            <input class="form-control" placeholder="Search here..." type="text" name="keyword">
                            <button type="submit" > <i class="fa fa-search"></i> </button>
                        </form>
                    </div>
                    <div class="filter-sidebar-left">
                        <div class="title-left">
                            <h3>Categories</h3>
                        </div>
                        <div class="list-group list-group-collapse list-group-sm list-group-tree" id="list-group-men" data-children=".sub-men">
                            <!--                                <div class="list-group-collapse sub-men">-->
                            <!--                                    <a class="list-group-item list-group-item-action" href="#sub-men1" data-toggle="collapse" aria-expanded="true" aria-controls="sub-men1"> Tiểu Thuyết <small class="text-muted">(100)</small>-->
                            <!--                </a>-->
                            <!--                                    <div class="collapse show" id="sub-men1" data-parent="#list-group-men">-->
                            <!--                                        <div class="list-group">-->
                            <!--                                            <a href="#" class="list-group-item list-group-item-action active">Phiêu lưu <small class="text-muted">(50)</small></a>-->
                            <!--                                            <a href="#" class="list-group-item list-group-item-action">Giả tưởng <small class="text-muted">(10)</small></a>-->
                            <!--                                            <a href="#" class="list-group-item list-group-item-action">Tình cảm <small class="text-muted">(10)</small></a>-->
                            <!--                                            <a href="#" class="list-group-item list-group-item-action">Hành động <small class="text-muted">(10)</small></a>-->
                            <!--                                        </div>-->
                            <!--                                    </div>-->
                            <!--                                </div>-->
                            {{#each categories}}
                                <a href="/books/category/{{_id}}" class="list-group-item list-group-item-action"> {{category_name}}  </a>
                                <!--                                <a href="#" class="list-group-item list-group-item-action"> Kinh tế </a>-->
                                <!--                                <a href="#" class="list-group-item list-group-item-action"> Manga - Comic </a>-->
                                <!--                                <a href="#" class="list-group-item list-group-item-action"> Thiếu nhi </a>-->
                                <!--                                <a href="#" class="list-group-item list-group-item-action"> Giáo dục</a>-->
                                <!--                                <a href="#" class="list-group-item list-group-item-action"> Trinh thám</a>-->
                            {{/each}}
                        </div>
                    </div>
                    <div class="filter-price-left">
                        <div class="title-left">
                            <h3>Price</h3>
                        </div>
                        <div class="price-box-slider">
                            <div id="slider-range"></div>
                            <p>
                                <input type="text" id="amount" readonly style="border:0; color:#fbb714; font-weight:bold;">
                                <button class="btn hvr-hover" type="submit">Filter</button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



