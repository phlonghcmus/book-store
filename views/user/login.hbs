

<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Đăng nhập</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Shop</a></li>
                    <li class="breadcrumb-item active">Đăng nhập</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<form action="/auth/login" method="post">
    <div class="cart-box-main" style="background-color: #111111">
        <div style=" background-color: #111111;display: flex;justify-content:center">
            <div style="width: 700px;height: 450px;background-color: #F3F3F3; padding: 75px;">
                <div class="login-signup-center" style="margin-bottom: 30px;"><h1>ĐĂNG NHẬP</h1></div>
                <div class="login-signup-center" style="margin-bottom: 30px;" ><input type="text" name="username" id="user" placeholder="Tên đăng nhập/Email/Số điện thoại" style="width: 500px"></div>
                <div class="login-signup-center" style="margin-bottom: 30px;" ><input type="password" name="password" id="pass" placeholder="Mật khẩu" style="width: 500px"></div>
                <div style="text-align: center;">
                <div class="login-signup-button-center"><button class="login-button" style="margin: 0px !important;">Đăng nhập</button></div>
                <div class="login-signup-center-error">
                  <p style="display: inline-block; color:red" id="login-error">{{message}}</p>
                </div>
                
                
                <div class="login-signup-center">
                    <p>Chưa có tài khoản ?</p>
                    <a href="/signup">Đăng kí</a>
                </div>
                </div>
            </div>
        </div>
    </div>
</form>