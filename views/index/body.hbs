    <!-- Start Categories  -->
    <div class="categories-shop">
        <div class="container">
             <div class="title-all text-center">
                <h1>TOP 3 SẢN PHẨM BÁN CHẠY NHẤT</h1>
            <div class="row">
                {{#each books}}
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="shop-cat-box">
                        <img class="img-fluid" src="{{cover}}" alt="" style="width: 400px; height: 400px;" />
                        <a class="btn hvr-hover" href="/books/detail/{{_id}}">{{title}}</a>
                    </div>
                </div>
                {{/each}}
                </div>
            </div>
        </div>
    </div>
    <!-- End Categories -->

