<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Đăng kí</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Shop</a></li>
                    <li class="breadcrumb-item active">Đăng kí</li>
                </ul>
            </div>
        </div>
    </div>
</div>


    <div class="cart-box-main" style="background-color: #111111">
        <div style="height: 38rem; background-color: #111111;display: flex;justify-content:center">
          <form action="/signup/success" method="post" onsubmit="return validation(this)">
            <div style="width: 700px;height: 750px;background-color: #F3F3F3; padding-top: 40px;">
                <div class="login-signup-center"><h1>ĐĂNG KÍ</h1></div>
                <div class="login-signup-center"><input type="text" name="username" id="username-signup" placeholder="username" style="width: 500px" onchange="checkUserNameExist(this.value)"></div>

                <div class="login-signup-center-error">
                  <p class="error"id="username-signup-error"></p>
                </div>


                <div class="login-signup-center"><input type="text" name="phone" id="phone-signup" placeholder="Số điện thoại" style="width: 500px" onchange="checkPhone(this.value)"></div>

                <div class="login-signup-center-error">
                  <p class="error" id="phone-signup-error"></p>
                </div>


                <div class="login-signup-center"><input type="email" name="email" id="email-signup" placeholder="Địa chỉ email" style="width: 500px"onchange="checkEmailExist(this.value)" ></div>

                <div class="login-signup-center-error">
                  <p class="error" id="email-signup-error"></p>
                </div>


                <div class="login-signup-center"><input type="password" name="password" id="pass-signup" placeholder="Password" style="width: 500px" onchange="checkPassword(this.value)"></div>

                <div class="login-signup-center-error">
                  <p class="error" id="password-signup-error"></p>
                </div>

                <div class="login-signup-center"><input type="password" name="re-password" id="re-pass-signup" placeholder="Re-enter password" style="width: 500px" onchange="checkRePassword(this.value)"></div>

                <div class="login-signup-center-error">
                  <p class="error" id="re-password-signup-error"></p>
                </div>

                <div class="login-signup-center" style="margin-bottom:30px">
                    <select name="gender" style="width: 500px">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                </div>


                <div class="login-signup-button-center">
                    <button class="login-button" type="submit" >Đăng kí</button>
                </div>
                <div class="login-signup-center-error">
                  <p style="display: inline-block; color:red" id="signup-error"></p>
                </div>
                </form>
                <div class="login-signup-center" style="margin-bottom: 30px;">
                    <p style="display: inline-block">Bằng việc đăng kí, bạn đã đồng ý với shop về </p>
                    <p style="color:red;display: inline-block;">Điều khoản dịch vụ</p>
                    <p style="display: inline-block;">&</p>
                    <p style="color: red;display: inline-block;">Chính sách bảo mật</p>
                </div>

                <div class="login-signup-center" style="margin-top: -25px">
                    <p>Đã có tài khoản ?</p>
                    <a href="login">Đăng nhập</a>
                </div>
            </div>
          
        </div>
    </div>
